<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, :placeholder=>"hello@example.com", :class=>"mole_reg"%></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :placeholder=>"At least 8 letters", :class=>"mole_reg"%></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :placeholder=>"Please repeat the password", :class=>"mole_reg" %></div><br>

  <div><button type="submit" class="a-btn" value="Sign up">
						<span class="a-btn-text">Become a member</span>
						<span class="a-btn-slide-text">Sign Up!</span>
						<span class="a-btn-icon-right"><span></span></span>
					</button></div>
<% end %>
